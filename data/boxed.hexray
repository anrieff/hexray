GlobalSettings {
	frameWidth          1024
	frameHeight         768
	ambientLight        (0.075, 0.075, 0.075)
	maxTraceDepth 8
	wantAA true
	prepassSamples 100
}

Camera camera {
	pos          (-30, 22, -40)
	yaw           -34.4
	pitch        -22.9
	roll          0.0
	fov           90
	aspectRatio   1.333
}
